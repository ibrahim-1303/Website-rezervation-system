@model IEnumerable<KuaförRandevu00.Models.HomePage>
@{
    Layout = "_LayoutAdmin";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Anasayfa</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    <link href="~/css/Resim.css" rel="stylesheet" />
</head>
<body>

    <p>
        <a asp-action="Create">Ekle</a>
    </p>


    <table class="table table-bordered table-striped">

        @foreach (var item in Model)
        {
            <thead>


                <tr>
                    <th scope="col">#</th>
                    <th scope="col">#</th>
                </tr>

            </thead>
            <tbody>
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.LogoYazısı)</th>
                    <td>@Html.DisplayFor(modelItem => item.LogoYazısı)</td>
                </tr>
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.Baslik)</th>
                    <td>@Html.DisplayFor(modelItem => item.Baslik)</td>
                </tr>
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.Aciklama)</th>
                    <td>@Html.DisplayFor(modelItem => item.Aciklama)</td>
                </tr>

                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.ResimYolu)</th>
                    <td>
                        <div class="gallerycontainer">
                            <a class="thumbnail" href="#thumb"><img src="@("~/HomePageResimleri/"+item.ResimYolu)" asp-append-version="true" width="100px" height="66px" border="0" /><span><img src="@("~/HomePageResimleri/"+item.ResimYolu)" asp-append-version="true" /><br />@*@Model*@</span></a>
                        </div>
                    </td>
                </tr>

                <tr>
                    <th scope="row"> @Html.DisplayNameFor(model => model.Baslik1)</th>
                    <td>@Html.DisplayFor(modelItem => item.Baslik1)</td>
                </tr>
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.Aciklama1)</th>
                    <td>@Html.DisplayFor(modelItem => item.Aciklama1)</td>

                </tr>
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.ServislerBasli)</th>
                    <td>@Html.DisplayFor(modelItem => item.ServislerBasli)</td>
                </tr>
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.SrvislerAciklama)</th>
                    <td>@Html.DisplayFor(modelItem => item.SrvislerAciklama)</td>

                </tr>
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.BaslikDigerSacStilleri)</th>
                    <td>@Html.DisplayFor(modelItem => item.BaslikDigerSacStilleri)</td>

                </tr>
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.AciklamaDigerSacStilleri)</th>
                    <td>@Html.DisplayFor(modelItem => item.AciklamaDigerSacStilleri)</td>


                </tr>
                <tr>
                    <th scope="row"> @Html.DisplayNameFor(model => model.ResimYolu1)</th>
                    <td>
                        <div class="gallerycontainer">
                            <a class="thumbnail" href="#thumb"><img src="@("~/HomePageResimleri/"+item.ResimYolu1)" asp-append-version="true" width="100px" height="66px" border="0" /><span><img src="@("~/HomePageResimleri/"+item.ResimYolu1)" asp-append-version="true" /><br />@*@Model*@</span></a>
                        </div>
                    </td>
                </tr>

                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.ResimYolu2)</th>
                    <td>
                        <div class="gallerycontainer">
                            <a class="thumbnail" href="#thumb"><img src="@("~/HomePageResimleri/"+item.ResimYolu2)" asp-append-version="true" width="100px" height="66px" border="0" /><span><img src="@("~/HomePageResimleri/"+item.ResimYolu2)" asp-append-version="true" /><br />@*@Model*@</span></a>
                        </div>
                    </td>

                </tr>


                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.ResimYolu3)</th>
                    <td>
                        <div class="gallerycontainer">
                            <a class="thumbnail" href="#thumb"><img src="@("~/HomePageResimleri/"+item.ResimYolu3)" asp-append-version="true" width="100px" height="66px" border="0" /><span><img src="@("~/HomePageResimleri/"+item.ResimYolu3)" asp-append-version="true" /><br />@*@Model*@</span></a>
                        </div>
                    </td>

                </tr>
                <tr>
                    <th scope="row"> @Html.DisplayNameFor(model => model.BaslikKaliteliSacKesimi)</th>
                    <td>@Html.DisplayFor(modelItem => item.BaslikKaliteliSacKesimi)</td>

                </tr>
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.AciklamaKaliteliSacKesimi)</th>
                    <td>@Html.DisplayFor(modelItem => item.AciklamaKaliteliSacKesimi)</td>

                </tr>
                <tr>
                    <th scope="row">@Html.DisplayNameFor(model => model.ResimYolu4)</th>
                    <td>
                        <div class="gallerycontainer">
                            <a class="thumbnail" href="#thumb"><img src="@("~/HomePageResimleri/"+item.ResimYolu4)" asp-append-version="true" width="100px" height="66px" border="0" /><span><img src="@("~/HomePageResimleri/"+item.ResimYolu4)" asp-append-version="true" /><br />@*@Model*@</span></a>
                        </div>
                    </td>

                </tr>


            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detay</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>


            </tbody>
        }
    </table>


</body>
</html>
