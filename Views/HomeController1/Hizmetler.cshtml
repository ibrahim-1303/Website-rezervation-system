@model IEnumerable<KuaförRandevu00.Models.Servis>

@{
    Layout = "_LayoutServis";
}

<!doctype html>
<html lang="en">

<head>
    <title>Barberz &mdash; Website Template by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=DM+Sans:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/barberz/barberz/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/barberz/barberz/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/barberz/barberz/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/barberz/barberz/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/barberz/barberz/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/barberz/barberz/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/barberz/barberz/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/barberz/barberz/css/aos.css">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/barberz/barberz/css/style.css">

</head>

<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">


    <div class="site-wrap" id="home-section">

        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">

            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Randevu Alabilmek İçin Üye Olunuz</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-footer">
                        <a asp-area="Identity" asp-page="/Account/Login"><button type="button" class="btn btn-info">GirisYap</button></a>
                        <a asp-area="Identity" asp-page="/Account/Register"><button type="button" class="btn btn-primary">Hızlı Üye</button></a>

                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    </div>
                </div>
            </div>
        </div>

        @foreach (var item in Model.TakeLast(1))
        {


            <div class="ftco-blocks-cover-1">
                <div class="site-section-cover overlay" data-stellar-background-ratio="0.5" style="background-image: url('/barberz/barberz/images/hero_1.jpg')">
                    <div class="container">
                        <div class="row align-items-center justify-content-center text-center">
                            <div class="col-md-7">
                                <h1 class="mb-3">@item.Baslik</h1>
                                <p>@item.Aciklama</p>
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                    Randevu Al
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="site-section">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="service-1 dark">
                                <span class="service-1-icon">
                                    <span class="flaticon-bald"></span>
                                </span>
                                <div class="service-1-contents">
                                    <h3>@item.Baslik1</h3>
                                    <p>@item.Aciklama1</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="service-1 dark">
                                <span class="service-1-icon">
                                    <span class="flaticon-beard"></span>
                                </span>
                                <div class="service-1-contents">
                                    <h3>@item.Baslik2</h3>
                                    <p>@item.Aciklama2</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="service-1 dark">
                                <span class="service-1-icon">
                                    <span class="flaticon-scissors"></span>
                                </span>
                                <div class="service-1-contents">
                                    <h3>@item.Baslik3</h3>
                                    <p>@item.Aciklama3</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="service-1 dark">
                                <span class="service-1-icon">
                                    <span class="flaticon-hair-spray"></span>
                                </span>
                                <div class="service-1-contents">
                                    <h3>@item.Baslik4</h3>
                                    <p>@item.Aciklama4</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="service-1 dark">
                                <span class="service-1-icon">
                                    <span class="flaticon-hair"></span>
                                </span>
                                <div class="service-1-contents">
                                    <h3>@item.Baslik5</h3>
                                    <p>@item.Aciklama5</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="service-1 dark">
                                <span class="service-1-icon">
                                    <span class="flaticon-barber-shop"></span>
                                </span>
                                <div class="service-1-contents">
                                    <h3>@item.Baslik6</h3>
                                    <p>@item.Aciklama6</p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>






            <div class="site-section bg-light">
                <div class="container">
                    <div class="row justify-content-center text-center mb-5">
                        <div class="col-7 text-center mb-5">
                            <h2 class="scissors text-center">@item.ClientSaysbaslik</h2>
                            <p class="lead">@item.ClientSaysAciklama</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 mb-4 mb-lg-0">
                            <div class="testimonial-2">
                                <div class="d-flex v-card align-items-center mb-4">
                                    <img src="@("~/ServislerimizResimleri/"+item.ResimYolu)" alt="Image" class="img-fluid mr-3" asp-append-version="true">
                                    <span>@item.Müsteriisim</span>
                                </div>
                                <blockquote>
                                    <p>@item.MüsteriAciklama</p>
                                </blockquote>

                            </div>
                        </div>
                        <div class="col-lg-4 mb-4 mb-lg-0">
                            <div class="testimonial-2">
                                <div class="d-flex v-card align-items-center mb-4">
                                    <img src="@("~/ServislerimizResimleri/"+item.ResimYolu2)" alt="Image" class="img-fluid mr-3" asp-append-version="true">
                                    <span>@item.Müsteriisim2</span>
                                </div>
                                <blockquote>
                                    <p>@item.MüsteriAciklama2</p>
                                </blockquote>

                            </div>
                        </div>
                        <div class="col-lg-4 mb-4 mb-lg-0">
                            <div class="testimonial-2">
                                <div class="d-flex v-card align-items-center mb-4">
                                    <img src="@("~/ServislerimizResimleri/"+item.ResimYolu3)" alt="Image" class="img-fluid mr-3" asp-append-version="true">
                                    <span>@item.Müsteriisim3</span>
                                </div>
                                <blockquote>
                                    <p>@item.MüsteriAciklama3</p>
                                </blockquote>

                            </div>
                        </div>
                    </div>
                </div>
            </div>




            <div class="site-section section-3" data-stellar-background-ratio="0.5" style="background-image: url('/barberz/barberz/images/hero_1.jpg'); ">
                <div class="container">
                    <div class="row justify-content-center text-center">
                        <div class="col-7 text-center mb-5">
                            <h2 class="text-white scissors primary-color-icon text-center">@item.KalitelisacBaslik</h2>
                            <p class="lead text-white mb-5">@item.KalitelisacAciklama</p>
                            <p><a href="#" class="btn btn-primary">Contact Us Now</a></p>
                        </div>
                    </div>
                </div>
            </div>


        }


    </div>

    <script src="~/barberz/barberz/js/jquery-3.3.1.min.js"></script>
    <script src="~/barberz/barberz/js/jquery-migrate-3.0.0.js"></script>
    <script src="~/barberz/barberz/js/popper.min.js"></script>
    <script src="~/barberz/barberz/js/bootstrap.min.js"></script>
    <script src="~/barberz/barberz/js/owl.carousel.min.js"></script>
    <script src="~/barberz/barberz/js/jquery.sticky.js"></script>
    <script src="~/barberz/barberz/js/jquery.waypoints.min.js"></script>
    <script src="~/barberz/barberz/js/jquery.animateNumber.min.js"></script>
    <script src="~/barberz/barberz/js/jquery.fancybox.min.js"></script>
    <script src="~/barberz/barberz/js/jquery.stellar.min.js"></script>
    <script src="~/barberz/barberz/js/jquery.easing.1.3.js"></script>
    <script src="~/barberz/barberz/js/bootstrap-datepicker.min.js"></script>
    <script src="~/barberz/barberz/js/aos.js"></script>

    <script src="~/barberz/barberz/js/main.js"></script>

</body>

</html>

